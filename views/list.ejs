  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
  <title>Hello, world!</title>
</head>

<body>

  <%- include('nav.html') %>




    <h4 class="ml-2 my-3 text-center">사람들 스케줄</h4>

    <div class="container input-group mb-2">
      <input class="form-control" id="search-input">
      <button class="input-group-append btn btn-danger" id="search">검색</button>
    </div>


    <div class="container">
      <ul class="list-group">
        <% for (var i=0; i < posts.length ; i++){ %>
          <li class="list-group-item">
            <p>글번호 : <%= posts[i].number%>
            </p>
            <h4>할일 제목 : <%= posts[i].title %>
            </h4>
            <p>마감 날짜 : <%= posts[i].date %>
            </p>
            <button class="btn btn-light" style="background-color: green; color: white;"
              onclick="location.href='/comment/<%= posts[i].number %>'">댓글</button>
            <button class="btn btn-light chat" data-id="<%= posts[i].작성자 %> "
              style="background-color: green; color: white;">채팅</button>
          </li>

          <% } %>
      </ul>
    </div>

    <script>

      $('.chat').click(function (e) {
        var id = e.target.dataset.id;
        $.post('/chatroom1', { 당한사람id: id }).then(() => {
          console.log('성공')
        })
      })

      $('#search').click(function () {
        var inputvalue = $('#search-input').val()
        window.location.replace('/list?search=' + inputvalue)
      })
 
    </script>



